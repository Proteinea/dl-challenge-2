{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${env:PROJ_DIR}:${env:PYTHONPATH}"
            },
            "cwd":"${fileDirname}"
        }
    ]
}